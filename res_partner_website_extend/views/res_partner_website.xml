<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Edit Profile Page -->
    <template id="create_res_partner" name="Edit">
        <t t-set="body_classname" t-value="'o_wprofile_body'"/>
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container pt-4 pb-5">
                    <t t-call="res_partner_website_extend.res_partner_template"/>
                </div>
            </div>
        </t>
    </template>

    <!-- This template used for admission from the Website -->
    <template id="res_partner_template" name="Res Partner">
        <h1 class="o_page_header">Res Partner</h1>
        <div>
            <form t-attf-action="/admission/submit" method="post" class="js_website_submit_form row" role="form" enctype="multipart/form-data">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <input type="hidden" name="url_param" t-att-value="request.params.get('url_param')"/>

                <div class="col-3">
                    <div class="card o_card_people">
                        <div class="card-body">
                            <img class="o_forum_avatar_img w-100 mb-3" t-att-src="website.image_url(user_id.sudo(), 'image_1920', 'avatar_128')"/>

                            <div class="my-3 mb-0 pt-2 border-top">
                                <div class="mb-3 col-12">
                                    <label class="text-primary mb-1 d-block" for="user_id">
                                        <span class="fw-bold"><t t-esc="user_id.name"/></span>
                                    </label>                                   
                                </div>  
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-9 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label class="mb-1 text-primary"><span class="fw-bold">Country</span></label>
                                    <div>
                                        <select name="country_id" class="select2 form-control">
                                            <t t-foreach="country_ids or []" t-as="country">
                                                <option t-att-value="country.id"><t t-esc="country.name"/></option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 col-6">
                                    <label class="text-primary mb-1 d-block" for="last_name"><span class="fw-bold">Date of birth</span></label>
                                    <div>
                                        <input id="date_of_birth" name="date_of_birth" type="date" class="form-control o_website_form_custom" required="1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label class="text-primary mb-1 d-block" for="last_name"><span class="fw-bold">Name</span></label>
                                    <div>
                                        <input id="name" name="name" type="text" class="form-control o_website_form_custom" required="1"/>
                                    </div>
                                </div>
                                
                                <div class="mb-3 col-6">
                                   <label for="studio1">
                                        <span class="s_website_form_label_content">
                                            Upload Document
                                        </span>
                                    </label>
                                    <div class="col">
                                        <input id="attachment" type="file"
                                                name="attachment" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                                <button type="submit" class="btn btn-primary o_wprofile_submit_btn">Create</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </template>


    <template id="submit_admission" name="Admission Submit">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_website_form" data-vcss="001"
                         data-snippet="s_website_form">
                    <div class="container">
                        <center>
                            <br/>
                            <br/>
                            <div class="col-lg-7 col-xl-6 me-lg-auto">
                                <span class="d-block fa fa-4x fa-thumbs-up mx-auto rounded-circle bg-primary"></span>
                                <br/>
                                <h1 class="text-center">Thank You!</h1>
                                <div class="pb16 pt16 s_hr" data-snippet="s_hr"
                                     data-name="Separator">
                                    <hr class="mx-auto border-top w-50 border-dark text-center"/>
                                </div>
                                <h5 class="text-center">
                                    <span class="fa fa-check-circle"></span>
                                    <span>Your admission registered
                                        <b>successfully</b>
                                    </span>
                                </h5>
                                <p class="text-center">We will get back to you
                                    shortly.
                                </p>
                                 <span class="fw-bold"><t t-esc="name"/></span>
                                 <br/>
                                <br/>
                            </div>
                        </center>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>