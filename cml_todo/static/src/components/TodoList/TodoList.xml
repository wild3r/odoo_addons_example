<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="cml_todo.TodoList" owl="1">
        <div class="container">
            <div class="row mx-2 mt-3">
                <div class="col-lg-6">
                    <!-- <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" t-on-click="addTask">New</button> -->
                    <button class="btn btn-primary" t-on-click="addTask">New</button>
                </div>
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search here..." t-ref="search-input" t-on-keyup="searchTasks" />
                        <button class="btn btn-outline-primary" t-on-click="searchTasks">Search</button>
                    </div>
                </div>
            </div>
            <div class="row m-4">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Task</th>
                            <th scope="col">Color</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="state.taskList" t-as="task" t-key="task.id">
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" t-att-checked="task.completed" t-on-click="ev => this.toggleTask(ev, task)" id="flexCheckCheckedDisabled" />
                                    <label class="form-check-label" t-attf-class="#{task.completed and 'text-decoration-line-through'}">
                                        <span t-out="task.name" />
                                    </label>
                                </div>
                            </td>
                            <td>
                                <input type="color" class="form-control form-control-color" id="color" t-att-value="task.color" t-on-change="(e)=>this.updateColorTask(e,task)" />
                            </td>
                            <td class="text-center">
                                <!-- <button class="btn btn-success mx-2" data-bs-toggle="modal" data-bs-target="#exampleModal" t-on-click="ev => this.editTask(ev, task)"> -->
                                <button class="btn btn-success mx-2" t-on-click="ev => this.editTask(ev, task)">
                                    <i class="fa fa-edit" aria-hidden="true" />
                                </button>
                                <button class="btn btn-danger mx-2" t-on-click="()=>this.deleteTask(task)">
                                    <i class="fa fa-trash" aria-hidden="true" />
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" t-ref="modalOwl" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Task</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                    </div>
                    <div class="modal-body">
                        <div class="mb-3 row">
                            <label for="name" class="col-sm-2 col-form-label">Task Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="name" t-model.lazy="state.task.name" t-att-value="state.task.name" />
                                <!-- <input type="text" class="form-control" id="name" /> -->
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="color" class="col-sm-2 col-form-label">Color</label>
                            <div class="col-sm-10">
                                <input type="color" class="form-control form-control-color" id="color" t-model.lazy="state.task.color" t-att-value="state.task.color" title="Choose your color" />
                                <!-- <input type="color" class="form-control form-control-color" id="color" /> -->
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="completed" class="col-sm-2 col-form-label">Completed</label>
                            <div class="col-sm-10">
                                <input class="form-check-input" type="checkbox" t-model.lazy="state.task.completed" t-att-checked="state.task.completed" id="completed" />
                                <!-- <input class="form-check-input" type="checkbox" id="completed" /> -->
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal"  t-on-click="saveTask">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
